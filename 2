public class Main {
    public static void main(String[] args) {
        // Створюємо змінну для зберігання суми парних чисел
        int sum = 0;

        // Проходимося по всім числам від 1 до 100
        for (int i = 1; i <= 100; i++) {
            // Перевіряємо, чи є поточне число парним
            if (i % 2 == 0) { // якщо поточне число ділиться на 2 без остачі
                // Якщо число є парним, додаємо його до суми
                sum += i; // додаємо поточне число до суми
            }
        }

        // Виводимо суму парних чисел
        System.out.println("Сума парних чисел в діапазоні від 1 до 100: " + sum);
    }
}
